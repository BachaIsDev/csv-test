<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="csvProcessor" class="org.service.CsvProcessor">
  </bean>

  <bean id="testProcessor" class="org.service.TestProcessor">
  </bean>

  <bean id="directoryHandler" class="org.service.DirectoryHandler">
    <property name="basePath" value="${application.path}"/>
  </bean>

  <bean id="appService" class="org.service.AppService">
    <constructor-arg ref="csvProcessor"/>
    <constructor-arg ref="testProcessor"/>
    <constructor-arg ref="directoryHandler"/>
  </bean>

  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <value>application.properties</value>
    </property>
  </bean>
</beans>