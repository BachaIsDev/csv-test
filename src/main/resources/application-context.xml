<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="sourceFileDescriptorHelperImpl" class="com.rnt.test_passing.util.impl.SourceFileDescriptorHelperImpl">
    <constructor-arg name="basePaths" value="${application.path}"/>
  </bean>

  <bean id="dtoConverter" class="com.rnt.test_passing.converter.impl.DtoToQuestionConverter">
  </bean>

  <bean id="questionRepository" class="com.rnt.test_passing.repo.impl.QuestionRepositoryImpl">
    <constructor-arg ref="sourceFileDescriptorHelperImpl"/>
    <constructor-arg ref="dtoConverter"/>
  </bean>

  <bean id="testService" class="com.rnt.test_passing.service.impl.TestServiceImpl">
    <constructor-arg ref="questionRepository"/>
  </bean>

  <bean id="testExecutor" class="com.rnt.test_passing.service.impl.TestExecutorImpl">
    <constructor-arg ref="ioService"/>
    <constructor-arg ref="questionConverter"/>
  </bean>

  <bean id="questionService" class="com.rnt.test_passing.service.impl.QuestionServiceImpl">
    <constructor-arg ref="questionRepository"/>
  </bean>

  <bean id="questionConverter" class="com.rnt.test_passing.converter.impl.OptionConverter">
  </bean>

  <bean id="scanner" class="java.util.Scanner">
    <constructor-arg value="#{T(java.lang.System).in}"/>
  </bean>

  <bean id="ioService" class="com.rnt.test_passing.service.impl.IOServiceImpl">
    <constructor-arg name="printStream" value="#{T(java.lang.System).out}"/>
    <constructor-arg ref="scanner"/>
  </bean>

  <bean id="appService" class="com.rnt.test_passing.service.AppService">
    <constructor-arg ref="testExecutor"/>
    <constructor-arg ref="questionService"/>
    <constructor-arg ref="ioService"/>
    <constructor-arg ref="testService"/>
  </bean>

  <bean id="conversionService"
    class="org.springframework.context.support.ConversionServiceFactoryBean">
  </bean>

  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
    <property name="locations">
      <value>application.properties</value>
    </property>
  </bean>
</beans>