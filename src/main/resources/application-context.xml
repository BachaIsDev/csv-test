<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="testRepositoryImpl" class="org.main.repo.impl.TestRepositoryImpl">
  </bean>

  <bean id="testServiceImpl" class="org.main.service.impl.TestServiceImpl">
    <constructor-arg ref="ioService"/>
    <constructor-arg ref="pathProvider"/>
  </bean>

  <bean id="pathProvider" class="org.main.util.PathProvider">
    <constructor-arg name="basePath" value="${application.path}"/>
  </bean>

  <bean id="ioService" class="org.main.service.impl.IOServiceImpl">
    <constructor-arg ref="pathProvider"/>
  </bean>

  <bean id="appService" class="org.main.service.AppService">
    <constructor-arg ref="testRepositoryImpl"/>
    <constructor-arg ref="testServiceImpl"/>
    <constructor-arg ref="ioService"/>
  </bean>

  <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
    <property name="locations">
      <value>application.properties</value>
    </property>
  </bean>
</beans>